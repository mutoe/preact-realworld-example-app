{
  "name": "preact-realworld-example-app",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack",
    "lint": "eslint src/**/*.{tsx,ts}",
    "test": "jest",
    "analyzer": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json dist -s gzip"
  },
  "dependencies": {
    "history": "^4.10.1",
    "preact": "^10.1.0",
    "preact-router": "^3.1.0"
  },
  "devDependencies": {
    "@types/history": "^4.7.3",
    "@types/jest": "^25.1.4",
    "@types/jsdom": "^16.1.0",
    "@types/mockjs": "^1.0.2",
    "@typescript-eslint/parser": "^4.18.0",
    "cross-env": "^7.0.2",
    "dotenv-webpack": "^1.7.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^25.1.0",
    "jest-serializer-html-string": "^1.0.1",
    "jsdom": "^16.2.0",
    "mockjs": "^1.1.0",
    "preact-render-to-string": "^5.1.1",
    "prettier": "^2.2.1",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "settings": {
      "react": {
        "pragma": "h",
        "version": "default"
      }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "prettier"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/{dist,src}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup-test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/types/**/*"
    ],
    "snapshotSerializers": [
      "jest-serializer-html-string"
    ]
  }
}
