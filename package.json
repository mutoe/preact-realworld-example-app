{
  "name": "preact-realworld-example-app",
  "version": "0.1.2",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "wmr",
    "build": "wmr build --prerender",
    "serve": "wmr serve",
    "lint": "prettier 'public/**/*.{js,ts,tsx,css,html}' '*.json' --write",
    "test": "jest"
  },
  "dependencies": {
    "preact": "^10.5.12",
    "preact-iso": "^1.0.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^25.1.4",
    "@types/jsdom": "^16.1.0",
    "@types/mockjs": "^1.0.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "jest": "^25.1.0",
    "jest-serializer-html-string": "^1.0.1",
    "jsdom": "^16.2.0",
    "mockjs": "^1.1.0",
    "ts-jest": "^25.2.1",
    "wmr": "^1.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/types/**/*"
    ],
    "snapshotSerializers": [
      "jest-serializer-html-string"
    ]
  }
}
