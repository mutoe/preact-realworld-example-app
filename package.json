{
	"name": "preact-realworld-example-app",
	"version": "0.1.2",
	"private": true,
	"scripts": {
		"start": "webpack-dev-server",
		"build": "cross-env NODE_ENV=production webpack",
		"lint": "eslint '{src,test}/**/*.{ts,tsx}' --fix && prettier '{src,test}/**/*{ts,tsx}' '*.{json,js}' --write",
		"test": "cross-env TZ=America/New_York jest",
		"analyzer": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json dist -s gzip"
	},
	"dependencies": {
		"history": "^4.10.1",
		"preact": "^10.1.0",
		"preact-router": "^3.1.0",
		"snarkdown": "^2.0.0",
		"ts-api-toolkit": "^2.0.14",
		"zustand": "^3.3.3"
	},
	"devDependencies": {
		"@types/enzyme": "^3.10.3",
		"@types/history": "^4.7.3",
		"@types/jest": "^25.1.4",
		"@types/jsdom": "^16.1.0",
		"@types/mockjs": "^1.0.2",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"cross-env": "^7.0.2",
		"dotenv-webpack": "^1.7.0",
		"enzyme": "^3.10.0",
		"enzyme-adapter-preact-pure": "^3.0.0",
		"eslint": "^7.22.0",
		"eslint-config-preact": "^1.1.3",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^5.2.0",
		"jest": "^25.1.0",
		"jest-serializer-html-string": "^1.0.1",
		"jsdom": "^16.2.0",
		"lint-staged": "^10.5.4",
		"mockjs": "^1.1.0",
		"preact-render-to-string": "^5.1.1",
		"prettier": "^2.2.1",
		"ts-jest": "^25.2.1",
		"ts-loader": "^6.2.1",
		"typescript": "^3.7.2",
		"webpack": "^4.41.2",
		"webpack-bundle-analyzer": "^3.6.0",
		"webpack-cli": "^3.3.10",
		"webpack-dev-server": "^3.9.0"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,json}": ["prettier --write"]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": ["preact", "plugin:@typescript-eslint/recommended"],
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"@typescript-eslint/no-explicit-any": "off"
		}
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"printWidth": 120,
		"arrowParens": "avoid"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": ["<rootDir>/{dist,src}"],
		"setupFilesAfterEnv": ["<rootDir>/test/setup-test.ts"],
		"collectCoverageFrom": ["<rootDir>/src/**/*.{ts,tsx}", "!<rootDir>/src/types/**/*"],
		"snapshotSerializers": ["jest-serializer-html-string"]
	}
}
